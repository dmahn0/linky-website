    <script>
        // ìˆ˜ìµ ê³„ì‚°ê¸°
        function calculateIncome() {
            const dailyTasks = document.getElementById('dailyTasks').value;
            const weeklyDays = document.getElementById('weeklyDays').value;
            
            document.getElementById('dailyTasksValue').textContent = dailyTasks;
            document.getElementById('weeklyDaysValue').textContent = weeklyDays;
            
            const monthlyIncome = dailyTasks * weeklyDays * 4 * 10000;
            
            // ë§Œì› ë‹¨ìœ„ë¡œ ê³„ì‚°í•˜ì—¬ xxë§Œì› í˜•íƒœë¡œ í‘œì‹œ (ìµœì†Œ ê¸ˆì•¡ ê¸°ì¤€)
            const manwon = monthlyIncome / 10000;
            const displayText = `â‚©${manwon}ë§Œì›~`;
            
            document.getElementById('monthlyIncome').textContent = displayText;
        }

        // FAQ í† ê¸€
        function toggleFAQ(element) {
            element.classList.toggle('active');
        }

        // GA ì´ë²¤íŠ¸ íŠ¸ë˜í‚¹
        function trackEvent(eventName) {
            if (typeof gtag !== 'undefined') {
                gtag('event', eventName, {
                    'event_category': 'partner_page',
                    'event_label': eventName
                });
            }
        }

        // í¼ ì œì¶œ ì²˜ë¦¬
        function handleFormSubmit(event) {
            event.preventDefault();
            
            trackEvent('partner_form_submit');
            
            const form = event.target;
            const submitBtn = form.querySelector('button[type="submit"]');
            const btnText = submitBtn.querySelector('.btn-text');
            const loading = submitBtn.querySelector('.loading');
            
            // ì²´í¬ë°•ìŠ¤ ê°’ ìˆ˜ì§‘
            const workAreas = Array.from(form.querySelectorAll('input[name="work_areas"]:checked'))
                .map(cb => cb.value).join(', ');
            const workTimes = Array.from(form.querySelectorAll('input[name="work_times"]:checked'))
                .map(cb => cb.value).join(', ');
            
            // ë¡œë”© ìƒíƒœ
            submitBtn.disabled = true;
            btnText.style.display = 'none';
            loading.style.display = 'inline-block';
            
            // FormData ìƒì„±
            const formData = new FormData(form);
            formData.set('work_areas', workAreas);
            formData.set('work_times', workTimes);
            
            // Google Apps Scriptë¡œ ì „ì†¡
            fetch(form.action, {
                method: 'POST',
                body: formData,
                mode: 'no-cors'
            })
            .then(() => {
                trackEvent('partner_form_success');
                alert('ì§€ì›í•´ ì£¼ì…”ì„œ ê°ì‚¬í•©ë‹ˆë‹¤.\n2-3ì¼ ë‚´ì— ì‹¬ì‚¬ ê²°ê³¼ë¥¼ ì•ˆë‚´ë“œë¦¬ê² ìŠµë‹ˆë‹¤.');
                form.reset();
            })
            .catch(error => {
                trackEvent('partner_form_error');
                console.error('Error:', error);
                alert('ì „ì†¡ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ ì£¼ì„¸ìš”.');
            })
            .finally(() => {
                submitBtn.disabled = false;
                btnText.style.display = 'inline';
                loading.style.display = 'none';
            });
        }

        // ìŠ¤í¬ë¡¤ ì• ë‹ˆë©”ì´ì…˜
        function handleScroll() {
            const elements = document.querySelectorAll('.benefit-card, .testimonial-card, .process-item');
            
            elements.forEach(element => {
                const rect = element.getBoundingClientRect();
                const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
                
                if (isVisible && !element.classList.contains('animate-fade-in')) {
                    element.classList.add('animate-fade-in');
                }
            });
        }

        window.addEventListener('scroll', handleScroll);
        handleScroll();

        // ë¶€ë“œëŸ¬ìš´ ìŠ¤í¬ë¡¤
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // ì´ˆê¸° ê³„ì‚°
        calculateIncome();
    </script>
</body>
</html>
